<div class = "container">
  <div class = "row">
    <h1>Burgers!</h1> 
  </div>
  <div class = "row">
    <div class = "col-sm-4">
      <h2>Burgers on the Menu!</h2>
      <ul>
        {{#each Burger}}
          {{#unless this.dataValues.devoured}}
            <li>
              {{this.dataValues.id}}: {{this.dataValues.burger_name}}

              <form action="/{{this.dataValues.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Eat This!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class = "col-sm-4">
        <h2> Have a Happy Burger </h2>
    </div>
    <div class = "col-sm-4">
      <h2>Eaten Burger!</h2>
      <ul>
        {{#each Burger}}
          {{#if this.devoured}}
            <li>
              {{this.id}}: {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class = "row">
  <h2>Add a Burger</h2>
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
      </div>
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
